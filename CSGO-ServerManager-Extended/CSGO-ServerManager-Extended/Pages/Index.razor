@page "/"
@inject ISnackbar _snackbar

<div class="content-container">
    <MudPaper Class="pa-5">
        <MudText Typo="Typo.h4" GutterBottom="true">CS:Commander</MudText>
        <MudText Typo="Typo.body1">Click <MudLink Href="/servers">here</MudLink> to add your first server, or check out the <MudLink Href="/help">getting started guide.</MudLink> for a complete guide</MudText>
    </MudPaper>

    @if(_settingsService.DashboardVisibilitySetting == SettingsConstants.ShowFavouritesOnDashboard) {
        @foreach (ICsgoServer server in csgoServers)
        {
            <MudPaper Style="margin-top: 30px;">
                <ServerComponent Server="server" ShowSettings="false">
                    <ServerHeader>
                        <MudText Typo="Typo.h6">@server.Name</MudText>
                    </ServerHeader>
                </ServerComponent>
            </MudPaper>
        }
    } else if (_settingsService.DashboardVisibilitySetting == SettingsConstants.ShowAllServersOnDashboard)
    {
        <MudPaper Style="margin-top: 15px;">
            <ServersTable>

            </ServersTable>
        </MudPaper>
    }

    <MudDialog IsVisible="@WelcomeDialogIsVisible">
        <TitleContent>
            <MudText Typo="Typo.h5">Welcome</MudText>
            <MudDivider Class="my-2" />
            <MudText Typo="Typo.subtitle1">Thank you for using CS:Commander</MudText>
        </TitleContent>
        <DialogContent>
            <MudText>
                CS:Commander is still in testing, this means that major changes will happen over the next period of time.
            </MudText>
            <MudText Class="mt-1">
                If you have design or feature suggestions please send me an email on "email". Furthermore of you incounter any bugs or issues please do notify me also.
            </MudText>
            <MudDivider Class="my-2" />
            <MudText>
                I hope you will enjoy this app as much as i do - developer
            </MudText>
        </DialogContent>
        <DialogActions>
            <MudCheckBox CheckedChanged="DisableWelcomeMessage" Class="mr-3" UnCheckedColor="Color.Default" Color="Color.Info" T="bool">Don't show this again</MudCheckBox>
        </DialogActions>
    </MudDialog>

</div>